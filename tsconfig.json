{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": ".",
    "moduleResolution": "node",
    "incremental": true,
    "experimentalDecorators": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "removeComments": false,
    "pretty": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "types/*"
      ],
      "@app/*": [
        "src/*"
      ],
      "@cypress/*": [
        "cypress/*"
      ]
    },
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
    "node_modules",
    "cypress"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}