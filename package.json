{
  "name": "next-app",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Boilerplate for React Application",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breadhead/next-app.git"
  },
  "keywords": [
    "next",
    "react",
    "ssr",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/breadhead/next-app/issues"
  },
  "homepage": "https://github.com/breadhead/next-apps#readme",
  "author": "Igor Kamyshev <igor@breadhead.ru>",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "yarn lint:style && yarn lint:code",
    "lint:code": "tslint -p tsconfig.json -c tslint.json",
    "lint:style": "stylelint './**/*.css'",
    "test": "jest",
    "pretty": "prettier --write \"./**/*.{ts,tsx,js}\"",
    "ci": "yarn lint && yarn test"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "classnames": "^2.2.6",
    "next": "^7.0.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.1",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.2",
    "redux-symbiote": "^2.6.0",
    "redux-thunk": "^2.1.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.9",
    "@types/next": "^7.0.5",
    "@types/react": "^16.7.6",
    "@types/react-redux": "^6.0.9",
    "@types/redux-thunk": "^2.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "cz-customizable": "^5.3.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "lint-staged": "^8.1.0",
    "postcss": "^7.0.5",
    "postcss-nesting": "^7.0.0",
    "postcss-normalize": "^7.0.1",
    "postcss-preset-env": "^6.4.0",
    "prettier": "^1.15.3",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended": "^2.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './git/commitlint.js'"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn pretty",
      "git add"
    ]
  }
}
